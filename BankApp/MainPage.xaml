<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankApp.MainPage">

    <StackLayout>
        <Picker
            SelectedIndexChanged="SenderPicker_SelectedIndexChanged"
            x:Name="senderPicker"/>
        <Picker
            SelectedIndexChanged="ReceiverPicker_SelectedIndexChanged"
            x:Name="receiverPicker"/>
        <Entry
            x:Name="amountEntry"
            Placeholder="Enter sum"/>
        <Button
            x:Name="sendButton"
            Text="Send"
            Clicked="sendButton_Clicked"/>
        <ScrollView>
            <StackLayout
                x:Name="accountsStack"/>
        </ScrollView>

    </StackLayout>

</ContentPage>
